{
  "name": "valk",
  "displayName": "Valk language",
  "publisher": "valk-lang",
  "version": "0.0.2",
  "icon": "images/valk-logo.png",
  "repository": {
    "url": "https://github.com/valk-lang/valk-vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "valk.activate",
        "title": "Valk extension activate"
      }
    ],
    "configurationDefaults": {},
    "languages": [
      {
        "id": "valk",
        "extensions": [
          ".valk",
          ".valk.h"
        ],
        "configuration": "./language-config.json"
      }
    ],
    "grammars": [
      {
        "language": "valk",
        "scopeName": "source.valk",
        "path": "./syntax/valk.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Valk",
      "properties": {
        "valk.path": {
          "scope": "window",
          "type": "string",
          "default": null,
          "description": "Valk executable path"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.9.2",
    "vscode-languageclient": "^9.0.1"
  }
}
