{
  "name": "valk-vscode",
  "displayName": "Valk vscode",
  "publisher": "me",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "valk-vscode.activate",
        "title": "Valk extension activate"
      }
    ],
    "configurationDefaults": {},
    "languages": [
      {
        "id": "valk",
        "extensions": [
          ".valk",
          ".valk.h"
        ],
        "configuration": "./language-config.json"
      }
    ],
    "grammars": [
      {
        "language": "valk",
        "scopeName": "source.valk",
        "path": "./syntax/valk.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Valk",
      "properties": {
        "valkLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.102.0",
    "typescript": "^5.9.2",
    "vscode-languageclient": "^9.0.1"
  },
  "dependencies": {
    "command-exists": "^1.2.9"
  }
}
